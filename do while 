//do...while loop

#include<stdio.h>

int main()
{
    int start,stop, step;
    int i;
    int sum=0;
    
    printf("choose when to start and stop:");
    scanf("%d%d",&start,&stop);
    do{
        printf("%d\n",i);
        i++; 
        sum +=i;//stop;
        }
        
        while(i<=stop); 
        printf("The sum is %d",sum);
        
    return 0;
}